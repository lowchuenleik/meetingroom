<div class='container'>

<% if params[:Preview] %>
<% end %>

	<div class="row">
	    <div class="col-xl-12">
		    <br>
		    <div class='card'>
		    	<%= image_tag @venue.images[0], class:'card-img-top', alt:'Card image cap' %>
		    	<div class='card-body'>

					<h5 class='card-title'><%= @reservation.name %></h5>
					<h3 class='card-title'><%= @venue.name %> </h3>
					<p class='card-text'><%= @reservation.start.to_date %> from <%= @reservation.start.strftime("%I:%M%p") %> to <%= @reservation.end.strftime("%I:%M%p") %></p>
					<p class='card-text'> You are being charged this much <strong> <%= @reservation.calc_amount(@venue.price) %> </strong> </p>
					<br>

					<%= link_to 'Back', new_venue_reservation_path, class:'btn btn-primary' %>
				</div>
			</div>
		    
		    <br>
	    	<%= render 'billing', user: @user %>

	    </div>
		    <br>
	    	
	</div>

	


</div>
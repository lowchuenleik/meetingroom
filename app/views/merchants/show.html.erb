<div class='container'>
	<p id="notice"><%= notice %></p>
	<div class='jumbotron text-center'>
		<h4> <%= @merchant.title %> </h4>
		<p> <%= @merchant.description %> </p>
	<div class='row'>
		<% if current_user == @merchant.owner %>
			<%= link_to 'Edit', edit_merchant_path(@merchant), class: 'btn btn-primary'%>
			<%= link_to 'Back', merchants_path, class: 'btn btn-primary' %>
			<div class='container'>
				<br>
				<%= link_to 'Add New venue', new_merchant_venue_path(@merchant), class:'btn btn-lg btn-success' %>
			</div>
		<% else %>
			<%= link_to 'Back', merchants_path, class: 'btn btn-primary' %>
		<% end %>
	</div>

	<% if @merchant.owner.can_receive_payments? %>
		<div class='col-lg-12'>
			<% if @venues.any? %>
				<% @venues.each do |venue| %>
					<div class='col-xs-12 col-sm-12 col-md-6 col-lg-3'>
						<div class='card'>
							<div class='card-body'>
								<h3> <%= venue.name %> </h3>
								<p> <%= venue.byline %> </p>
								<p> <%= "$#{venue.price}" %> </p>
							</div>
							<div class='row'>
								<div class='col-lg-12 text-center'>
									<%= form_for @transaction do |f| %>
										<%= f.hidden_field :user_id, value: current_user.id %>
										<%= f.hidden_field :merchant_id, value: @merchant.id %>
										<%= f.hidden_field :venue_id, value: venue.id %>
										<%= f.hidden_field :total, value: venue.price %>
										<%= f.submit 'BOOK', class: 'btn btn-success'%>
									<% end %>
								</div>
							</div>
							<% if current_user == @merchant.owner %>
								<div class='row'>
									<div class='col-lg-6 text-center'>
										<button type='button' class='btn-md btn-warning'>
											<%= link_to 'Edit', edit_merchant_venue_path(@merchant, venue) %>
										</button>
									</div>
									<div class='col-lg-6 text-center'>
										<button type='button' class='btn-md btn-warning'>
											<%= link_to 'Destroy', merchant_venue_path(@merchant, venue), method: :delete %>
										</button>
									</div>
								</div>
							<% end %>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>

	<% else %>
		<div class='col-lg-12 text-center'>
			<h4> This merchant hasn't registered with Stripe yet! Or error :( </h4>
		</div>
	<% end %>

</div>
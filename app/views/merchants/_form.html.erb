<%= simple_form_for(@merchant) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title%>
    <%= f.input :description%>
    <%= f.input :uid %>
    <%= f.input :provider %>
    <%= f.input :access_code %>
    <%= f.input :publishable_key %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
